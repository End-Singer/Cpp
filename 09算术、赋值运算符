#include<bits/stdc++.h>
using namespace std;
int main(){
	/*运算符 
	1.算术运算符
	2.赋值运算符
	3.比较运算符
	4.逻辑运算符*/
	// 整数除整数还是整数，除数不能为0，小数可以除小数。 
	int a1=5,b1=3;
	cout<<a1/b1<<endl;
	
	// 取余运算，除数大于被除数时余被除数本身，两个小数之间不能做取余运算 
	int a2=10,b2=20;
	cout<<a2%b2<<endl;
	
	// 递增递减运算符
	// 1.前置递增，先让变量+1再进行表达式运算 
	int x = 10;
	int y = ++x * 10;
	cout<<"x="<<x<<endl;
	cout<<"y="<<y<<endl;
	// 2.后置递增，先进行表达式运算，再让变量+1 
	x = 10;
	int z = x++ * 10;
	cout<<"x="<<x<<endl;
	cout<<"z="<<z<<endl;
	// 递减同理 
	
	// 赋值运算符
	int a = 10;
	a+=5;// a = a + 5的简化 
	cout<<"a="<<a<<endl;
	
	return 0;
}
