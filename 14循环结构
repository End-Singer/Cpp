#include<bits/stdc++.h>
using namespace std;
int main(){
/*  循环结构
	while 循环语句
	作用：满足循环条件，执行循环语句
	语法：while(循环条件)(循环语句)
	解释：只要循环条件的结果为真(while True)，就执行循环语句*/
	int n = 0;
	cout<<"while循环"<<endl;
	while(n<10)(cout<<n<<endl,n++);
	
/* do while 循环语句
	作用：满足循环条件，执行循环语句
	语法：do{循环语句}while(循环条件);
	注意：与while的区别在于do…while会先执行一次循环语句，
	再判断循环条件*/
	cout<<"do…while循环"<<endl;
	int i = 0;
	do
	{
		cout<<i<<endl;
		i++;
	}
	while(i<10);

/*	for 循环语句
	作用：满足循环条件，执行循环语句
	语法：for(起始表达式;条件表达式;末尾循环体){循环语句;}
	执行顺序：0123123…… 
	for(int i=0【0,只执行一次】;i<10【1】;i++【3】)
	{
		cout<<i<<endl【2】;
	}*/
	cout<<"for循环"<<endl;
	int q = 0;
	for(;q<10;q++)
	{
		cout<<q<<endl;	
	} 

	return 0;
}
